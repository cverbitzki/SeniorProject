<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#223283">

    <Button
        android:id="@+id/activityoff"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="stopActivityService"
        android:text="Stop Tracking Activity"
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1a1dc7"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:layout_below="@+id/activityon"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/activityon"
        android:layout_alignEnd="@+id/activityon"
        android:textSize="25dp" />

    <Button
        android:id="@+id/activityon"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:onClick="startActivityService"
        android:text="Start Tracking Activity"
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1a1dc7"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:layout_below="@+id/state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Background State"
        android:id="@+id/state"
        android:layout_alignParentTop="true"
        android:textSize="35dp"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>